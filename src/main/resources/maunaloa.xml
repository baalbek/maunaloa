<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <!--
    <import resource="classpath:aop.xml"  />
    -->

    <import resource="classpath:kalihiwai.xml" />

    <!--
    <bean id="chart" class="manualoa.views.graphics.impl.DemoChart"></bean>
    -->
    <bean id="chart" class="maunaloa.views.charts.CT1" />


    <bean id="calculator" class="maunaloa.models.impl.BlackScholesCalculator">
        <constructor-arg ref="kalihiwai-calc" />
    </bean>

    <bean id="bean-factory" class="maunaloa.models.impl.DefaultHtmlRowBeanFactory" />
    <!--
        <bean id="downloader" class="maunaloa.dummy.Downloader" />

    -->
    <bean id="downloader" class="maunakea.financial.impl.NetfondsDownloader" />

    <bean id="derivative-parser" class="maunaloa.models.impl.FilteredDerivativeParser">
        <constructor-arg ref="calculator" />
        <constructor-arg ref="bean-factory" />
    </bean>

    <bean id="stock-parser" class="maunakea.financial.impl.DefaultStockParser" />

    <bean id="etrade" class="maunakea.financial.impl.Netfonds">
        <property name="downloader" ref="downloader" />
        <property name="derivativeParser" ref="derivative-parser" />
        <property name="stockParser" ref="stock-parser" />
        <property name="caching" value="true" />
    </bean>

    <bean id="netfonds-model" class="maunaloa.models.NetfondsModel" />

    <bean id="facade" class="maunaloa.models.impl.FacadeImpl">
        <constructor-arg ref="netfonds-model" />
        <constructor-arg ref="etrade" />
    </bean>

    <bean id="derivatives-controller"
          class="maunaloa.controllers.impl.DerivativesControllerImpl">
        <constructor-arg ref="facade" />
        <property name="chart" ref="chart"/>
        <property name="tickers">
            <list>
                <value>STL</value>
                <value>YAR</value>
                <value>NHY</value>
                <value>ORK</value>
            </list>
        </property>
    </bean>
</beans>


