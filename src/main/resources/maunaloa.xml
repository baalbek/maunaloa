<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="calculator" class="maunaloa.service.calculator.BlackScholes" />

    <bean id="chartCandlesticks" class="maunaloa.views.charts.CT1" />

    <bean id="chartWeeks" class="maunaloa.views.charts.CT2" />

    <bean id="locator" class="ranoraraku.models.impl.StockLocatorImpl" />

    <bean id="facade" class="maunaloa.models.impl.FacadeImpl">
        <property name="locator" ref="locator" />
        <!-- property name="defaultStartDate" value="2010-1-1" / -->
    </bean>

    <bean id="mainframe-controller"
          class="maunaloa.controllers.impl.DefaultMainFrameController">
        <property name="candlesticksChart" ref="chartCandlesticks" />
        <property name="weeklyChart" ref="chartWeeks" />
        <property name="facade" ref="facade" />

    </bean>
</beans>


