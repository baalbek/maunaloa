<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane prefHeight="750.0" prefWidth="1200.0" xmlns:fx="http://javafx.com/fxml">
  <center>
    <TabPane prefHeight="-1.0" prefWidth="-1.0" tabClosingPolicy="UNAVAILABLE">
      <tabs>
        <Tab text="Options">
          <content>
            <BorderPane prefHeight="-1.0" prefWidth="-1.0">
              <center>
                <TableView id="TableView" fx:id="derivativesTableView" editable="true" prefHeight="-1.0" prefWidth="-1.0">
                  <columns>
                    <TableColumn prefWidth="75.0" text="Selected" fx:id="colSelected" />
                    <TableColumn editable="true" prefWidth="75.0" text="Option" fx:id="colOpName" />
                    <TableColumn prefWidth="75.0" text="Expiry" fx:id="colExpiry" />
                    <TableColumn prefWidth="75.0" text="Days" fx:id="colDays" />
                    <TableColumn prefWidth="75.0" text="Buy" fx:id="colBuy" />
                    <TableColumn prefWidth="75.0" text="Sell" fx:id="colSell" />
                    <TableColumn prefWidth="75.0" text="Spread" fx:id="colSpread" />
                    <TableColumn prefWidth="75.0" text="Iv Buy" fx:id="colIvBuy" />
                    <TableColumn prefWidth="75.0" text="Iv" fx:id="colIvSell" />
                    <TableColumn prefWidth="75.0" text="Delta" fx:id="colDelta" />
                    <TableColumn prefWidth="75.0" text="Rating" fx:id="colRating" />
                    <TableColumn prefWidth="75.0" text="Break Even" fx:id="colBreakEven" />
                    <TableColumn prefWidth="75.0" text="Risc" fx:id="colRisc" />
                    <TableColumn prefWidth="75.0" text="Stockprice Risc" fx:id="colSpRisc" />
                  </columns>
                </TableView>
              </center>
              <top>
                <HBox prefHeight="-1.0" prefWidth="200.0">
                  <children>
                    <Label text="Risk:">
                      <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                      </HBox.margin>
                    </Label>
                    <TextField fx:id="txRisk" alignment="CENTER_RIGHT" onAction="#calcRisk" prefWidth="75.0" promptText="">
                      <HBox.margin>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="10.0" fx:id="x2" />
                      </HBox.margin>
                    </TextField>
                    <Label text="Open:">
                      <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                      </HBox.margin>
                    </Label>
                    <TextField fx:id="txOpen" alignment="CENTER_RIGHT" prefWidth="75.0" promptText="" HBox.margin="$x2" />
                    <Label text="Hi:">
                      <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                      </HBox.margin>
                    </Label>
                    <TextField fx:id="txHi" alignment="CENTER_RIGHT" prefWidth="75.0" promptText="" HBox.margin="$x2" />
                    <Label text="Lo:">
                      <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                      </HBox.margin>
                    </Label>
                    <TextField fx:id="txLo" alignment="CENTER_RIGHT" prefWidth="75.0" promptText="" HBox.margin="$x2" />
                    <Label text="Spot:">
                      <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                      </HBox.margin>
                    </Label>
                    <TextField fx:id="txSpot" alignment="CENTER_RIGHT" prefWidth="75.0" promptText="" HBox.margin="$x2" />
                  </children>
                </HBox>
              </top>
            </BorderPane>
          </content>
        </Tab>
        <Tab text="Candlesticks">
          <content>
            <VBox fx:id="vboxCandlesticks" prefHeight="-1.0" prefWidth="-1.0">
              <children>
                <Canvas fx:id="myCanvas" focusTraversable="false" height="600.0" opacity="1.0" pickOnBounds="true" scaleX="1.0" scaleY="1.0" translateX="0.0" translateY="0.0" width="1200.0" />
              </children>
            </VBox>
          </content>
        </Tab>
          <Tab text="Weeks">
              <content>
                  <VBox fx:id="vboxWeeks" prefHeight="-1.0" prefWidth="-1.0">
                      <children>
                          <Canvas fx:id="myCanvas2" focusTraversable="false" height="600.0" opacity="1.0" pickOnBounds="true" scaleX="1.0" scaleY="1.0" translateX="0.0" translateY="0.0" width="1200.0" />
                      </children>
                  </VBox>
              </content>
          </Tab>
      </tabs>
    </TabPane>
  </center>
  <top>
    <VBox prefHeight="-1.0" prefWidth="100.0">
      <children>
        <MenuBar>
          <menus>
            <Menu mnemonicParsing="false" text="File">
              <items>
                <MenuItem mnemonicParsing="false" text="Close" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#selectAllDerivatives" text="Select All Derivatives" />
                <MenuItem mnemonicParsing="false" onAction="#unSelectAllDerivatives" text="Un-Select All Derivatives" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
              <items>
                <MenuItem mnemonicParsing="false" text="About" />
              </items>
            </Menu>
          </menus>
        </MenuBar>
        <HBox prefHeight="-1.0" prefWidth="-1.0">
          <children>
            <RadioButton fx:id="rgCalls" mnemonicParsing="false" selected="true" text="Calls" userData="calls">
              <toggleGroup>
                <ToggleGroup fx:id="rgDerivatives" />
              </toggleGroup>
              <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
              </HBox.margin>
            </RadioButton>
            <RadioButton fx:id="rgPuts" mnemonicParsing="false" text="Puts" toggleGroup="$rgDerivatives" userData="puts">
              <HBox.margin>
                <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" fx:id="x1" />
              </HBox.margin>
            </RadioButton>
            <RadioButton fx:id="rgCallsAndPuts" mnemonicParsing="false" text="All" toggleGroup="$rgDerivatives" userData="all" HBox.margin="$x1" />
            <ChoiceBox fx:id="cbTickers">
              <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
              </HBox.margin>
            </ChoiceBox>
            <CheckBox fx:id="cxLoadOptionsHtml" mnemonicParsing="false" selected="true" text="Load Derivatives">
              <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
              </HBox.margin>
            </CheckBox>
            <CheckBox fx:id="cxLoadStockHtml" disable="false" mnemonicParsing="false" selected="true" text="Load Stock">
              <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
              </HBox.margin>
            </CheckBox>
          </children>
        </HBox>
      </children>
    </VBox>
  </top>
</BorderPane>
